{
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "nunjucks": "^3.2.4",
    "eleventy": "^1.0.6",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "nunjucks-date": "^1.5.0"
  },
  "name": "paragon-site",
  "version": "1.0.0",
  "description": "website for paragon studios",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:css build:html build:fix",
    "build:css": "mkdir -p _site/src/css && node-sass _includes/sass/style.sass > _site/src/css/style.css",
    "build:html": "eleventy",
    "build:reset-assets": "mkdir -p _site/src/assets && mv _site/src/assets _site/src/assets_DEL && rm -rf _site/src/assets_DEL",
    "build:remove-trash": "rm -rf _site/README",
    "build:fix": "npm-run-all build:reset-assets build:remove-trash && cp -rf src/assets _site/src/assets",
    "watch": "nodemon --exec \"npm run build -s \" --ext \"md,sass,njk\"",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paragon-Studios/Paragon-Site.git"
  },
  "keywords": [
    "site",
    "web",
    "website",
    "sass"
  ],
  "author": "R-unic, Paragon-Studios",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Paragon-Studios/Paragon-Site/issues"
  },
  "homepage": "https://github.com/Paragon-Studios/Paragon-Site#readme"
}
