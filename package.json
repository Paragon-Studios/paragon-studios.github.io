{
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "nunjucks": "^3.2.4",
    "eleventy": "^1.0.6",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "nunjucks-date": "^1.5.0"
  },
  "name": "paragon-site",
  "version": "1.0.0",
  "description": "website for paragon studios",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:css build:html build:fix-css build:fix-assets build:remove-garbage --silent",
    "build:css": "mkdir -p src/css && node-sass _includes/sass/style.sass > src/css/style.css",
    "build:html": "eleventy",
    "build:fix-css": "[ -d _site/src/css ] || mv _site/src/css _site/src/css_DEL ; cp -rf src/css _site/src/css",
    "build:fix-assets": "[ -d _site/src/assets ] || mv _site/src/assets _site/src/assets_DEL ; cp -rf src/assets _site/src/assets",
    "build:remove-garbage": "rm -rf _site/README && rm -rf _site/src/css_DEL && rm -rf _site/src/assets_DEL",
    "watch": "nodemon --exec \"npm run build -s\" --ext \"md,sass,njk\"",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Paragon-Studios/Paragon-Site.git"
  },
  "keywords": [
    "site",
    "web",
    "website",
    "sass"
  ],
  "author": "R-unic, Paragon-Studios",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Paragon-Studios/Paragon-Site/issues"
  },
  "homepage": "https://github.com/Paragon-Studios/Paragon-Site#readme"
}
